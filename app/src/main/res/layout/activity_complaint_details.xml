<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ComplaintDetailsActivity">


    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="kjsfghjsegh"
                    android:textColor="@color/app_color_dark"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold"


                    />
                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="sdsd"
                    android:textColor="@color/app_color_medium"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="sdsd"

                    android:layout_marginBottom="@dimen/_10dp"
                    android:textColor="@color/app_color_medium"
                    android:textSize="@dimen/_16sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/view_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/button_bg_app_color_round_corner"
                    android:padding="@dimen/_10dp"

                    android:text="View Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="#e5e5e5"
                    android:layout_marginTop="@dimen/_10dp"/>


              <!--  //Reply by admin-->
                <LinearLayout
                    android:id="@+id/r_admin_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_16sp"
                        android:layout_gravity="center"
                        android:textColor="@color/app_color_dark"


                        android:text="Reply by Admin"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:background="@drawable/textfield_bg"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10dp"

                        >

                        <TextView
                            android:id="@+id/reply_by_admin_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@android:color/transparent"
                             android:textColorHint="#BFBFBF"
                            android:inputType="text"
                            android:text=""
                            android:padding="@dimen/_10dp"
                            android:textColor="@color/app_color_medium"
                            />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/r_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"


                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sp"
                            android:layout_gravity="center"
                            android:textColor="@color/app_color_dark"


                            android:text="Reply"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:background="@drawable/textfield_bg"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10dp"

                            >

                            <EditText
                                android:id="@+id/reply_et"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="write a reply.."
                                android:textColorHint="#BFBFBF"
                                android:inputType="text"
                                android:padding="@dimen/_10dp"
                                android:textColor="@color/app_color_medium"
                                />

                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/do_reply_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10dp"
                        android:background="@drawable/red_button_bg_app_color_round_corner"
                        android:padding="@dimen/_10dp"
                        android:text="Reply"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>


</RelativeLayout>